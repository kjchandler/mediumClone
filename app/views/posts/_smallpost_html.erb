div class="col-md-3 col-sm-6 col-xs-12 post-sm">
  <div class=" well well-sm ">
    <p>
      <span class="post-creator" style="background-image: url(<%= post.profile.avatar(:thumb) %>)"></span>
      <strong><%= link_to post.profile.username, post.profile %></strong>
      <span style="float: right; font-size: 8pt;"><%= time_ago_in_words(post.created_at) %> ago</span>
    </p>

    <div id="postPic" style="background-image: url(<%= post.picture.url %>);" onclick="document.location.href='/posts/<%= post.id %>'">
      
    </div>
    <hr />
    <p>
      <strong><%= link_to post.user.profile.username, post.user.profile %></strong> - <%= post.description %>
    </p>
  </div>

</div>