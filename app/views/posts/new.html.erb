<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel">
        <h3>New Post</h3>
        <%= form_for(@post) do |f| %>
        <% if @post.errors.count > 0 %>
          <div class="alert alert-danger">
            <% @post.errors.full_messages.each do |e| %>
            <ul>
              <li><%= e %></li>
            </ul>
            <% end %>
          </div>
        <% end %>
        <div class="field form-group">
          <%= f.text_field :description, :class => 'form-control', :placeholder => "Description" %>
        </div>
        <div class="field form-group">
          <%= f.file_field :picture %>
        </div>
        <%= f.submit "Make it!", :class => 'btn btn-primary' %>
        <% end %>
    </div>
  </div>
</div>